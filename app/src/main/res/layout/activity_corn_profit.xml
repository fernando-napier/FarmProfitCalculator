<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cornProfitBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fernando.farmingfarming.CornProfit"
    tools:replace="android:label,Model">


    <ScrollView
        android:id="@+id/cornScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/cornProfitInnerLayout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Space
                android:id="@+id/cornProfitDummy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible" />
            <Button
                android:id="@+id/cornProfitEditValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Crop Values"
                android:background="@drawable/rectangle"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/cornProfitDummy"
                android:layout_marginBottom="15sp"
                />
            <Button
                android:id="@+id/cornProfitWelcomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:background="@drawable/rectangle"
                android:layout_alignParentRight="true"
                android:layout_alignLeft="@+id/cornProfitDummy"
                android:layout_marginBottom="15sp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cornProfitInputAlert"
                android:layout_below="@+id/cornInputsButton"
                android:text="click this button to customize variables"
                android:gravity="center"
                android:textSize="8sp"
                android:visibility="invisible"/>


            <Button
                android:id="@+id/cornInputsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cornProfitEditValues"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/cornProfitDummy"
                android:gravity="center"
                android:text="Inputs"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ToggleButton
                android:id="@+id/cornToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/welcomeSpace"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/cornProfitEditValues"
                android:gravity="center"
                android:onClick="onToggleClicked"
                android:textOff="Pie"
                android:textOn="Bar" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/cornInputsBarChart"
                android:layout_width="match_parent"
                android:layout_height="800sp"
                android:layout_below="@id/cornInputsButton"
                android:visibility="invisible" />


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/cornInputsPieChart"
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:layout_below="@id/cornInputsButton"
                android:visibility="visible" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/cornInputsPieChart1"
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:layout_below="@id/cornInputsPieChart"
                android:visibility="visible" />




            <Button
                android:id="@+id/cornCommodityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/cornProfitDummy"
                android:layout_below="@+id/cornInputsPieChart1"
                android:gravity="center"
                android:text="Commodity Price"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="5sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/cornLinkCBOT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cornInputsPieChart1"
                android:layout_alignBottom="@+id/cornCommodityText"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="5sp"
                android:layout_alignLeft="@+id/cornProfitDummy"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/cornPriceBushel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cornCommodityText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                />


            <Button
                android:id="@+id/cornReturnsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/cornProfitDummy"
                android:layout_below="@+id/cornPriceBushel"
                android:autoLink="web"
                android:gravity="center"
                android:text="Returns"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/cornReturnsChart"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_below="@id/cornReturnsButton"
                android:paddingBottom="50sp" />


            <Button
                android:id="@+id/cornProfitText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/cornProfitDummy"
                android:layout_below="@+id/cornReturnsChart"
                android:gravity="center"
                android:text="Profit"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/cornProfitChart"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_below="@id/cornProfitText"
                android:paddingBottom="50sp" />



        </RelativeLayout>


    </ScrollView>


</RelativeLayout>