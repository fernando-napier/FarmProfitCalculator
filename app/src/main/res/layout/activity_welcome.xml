<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Welcome"
    android:id="@+id/welcomeBackground">

    <!-- the corn image is weighted 2:1 width to height  -->

    <Space android:id="@+id/cornProfitDummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"

        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:id="@+id/welcomeScrollImages"
        android:layout_centerInParent="true"


        >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/welcomeLinearLayout">

                <ImageView

                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:id="@+id/welcomeCorn"
                    android:src="@drawable/corn"
                    android:scaleType="fitXY" />



                <ImageView

                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:id="@+id/welcomeSoybean"
                    android:src="@drawable/soybean"
                    android:scaleType="fitXY" />

                <ImageView

                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:id="@+id/welcomeCotton"
                    android:src="@drawable/cotton"
                    android:scaleType="fitXY" />








            </LinearLayout>





    </HorizontalScrollView>
    <!-- this USDA logo is 5:2 width to height -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/welcomeUSDA"
        android:src="@drawable/usdabanner"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predictive Model for Effective Farming"
        android:id="@+id/welcomeTitle"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check out the Model! \nclick the corn"
        android:id="@+id/welcomeModelText"
        android:layout_below="@+id/welcomeTitle"
        android:paddingTop="40sp"
        android:layout_alignLeft="@+id/welcomeCorn"
        android:layout_alignRight="@+id/welcomeCorn"
        android:gravity="center" />


</RelativeLayout>
